[flake8]
# See https://pycodestyle.pycqa.org/en/latest/intro.html#error-codes
ignore =
    # E203: whitespace before ‘,’, ‘;’, or ‘:’
    E203,
    # E266: too many leading ‘#’ for block comment
    E266,
    # E501: line too long
    E501,
    # W503: line break before binary operator
    W503
exclude = .git,docs,__init__.py
